#!/usr/bin/env bash

set -x

git main

bundler install

echo "
Layout/FirstArgumentIndentation:
  Enabled: true
  EnforcedStyle: consistent

Layout/MultilineMethodArgumentLineBreaks:
  Enabled: true

Layout/MultilineArrayLineBreaks:
  Enabled: true

Layout/MultilineHashKeyLineBreaks:
  Enabled: true

Layout/FirstMethodArgumentLineBreak:
  Enabled: true

Layout/FirstArrayElementLineBreak:
  Enabled: true

Layout/FirstHashElementLineBreak:
  Enabled: true

Layout/FirstMethodParameterLineBreak:
  Enabled: true" >> .rubocop.yml

bundle exec rubocop --fix-layout --force-exclusion $@
bundle exec rubocop --auto-correct --only Style/TrailingCommaInArrayLiteral --force-exclusion $@

git restore .rubocop.yml

git checkout -b "autocorrect-multiline-$@"

git commit -a -m "Run new Layout cops on $@

Autocorrect all layout issues after adding the following cops:

```
  Layout/FirstArgumentIndentation
  Layout/MultilineMethodArgumentLineBreaks
  Layout/MultilineArrayLineBreaks
  Layout/MultilineHashKeyLineBreaks
  Layout/FirstMethodArgumentLineBreak
  Layout/FirstArrayElementLineBreak
  Layout/FirstHashElementLineBreak
  Layout/FirstArgumentIndentation
  Layout/FirstMethodParameterLineBreak
```
  
This will ensure that we can bump `Shopify/ruby-style-guide` with
the changes added here https://github.com/Shopify/ruby-style-guide/pull/387
"

git push

dev open pr