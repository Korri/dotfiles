{
    "git.enableSmartCommit": true,
    "remote.SSH.defaultExtensions": [
        "eamodio.gitlens",
        "graphql.vscode-graphql",
        "redhat.vscode-yaml",
        "github.copilot",
        "byesig",
    ],
    "sorbet.enabled": true,
    "redhat.telemetry.enabled": false,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "editor.rulers": [
        120
    ],
    "workbench.editor.wrapTabs": true,
    "editor.inlineSuggest.enabled": true,
    "editor.detectIndentation": true,
    "editor.tabSize": 2,
    "diffEditor.ignoreTrimWhitespace": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.statusBar.enabled": false,
    "[ruby]": {
        "editor.defaultFormatter": "Shopify.ruby-lsp",
        "editor.insertSpaces": true,
        "editor.semanticHighlighting.enabled": true,
        "editor.formatOnType": true,
        "editor.formatOnSave": true,
        "editor.tabSize": 2,
    },
    "editor.foldingMaximumRegions": 10000,
    "workbench.colorTheme": "Default Light+ Experimental",
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": false,
        "markdown": false
    },
    "byesig.enabled": true,
    "byesig.opacity": 0.9,
    "terminal.integrated.scrollback": 10000,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.autoSave": "onFocusChange",
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "editor.stickyScroll.enabled": false,
    "shopifyGlobal.mysqlEditor": "external",
    "workbench.sideBar.location": "right",
    "editor.minimap.enabled": false,
    "editor.tokenColorCustomizations": {
        "textMateRules": [
            {
                "scope": "meta.function.method",
                "settings": {
                    "foreground": "#ff0000"
                }
            }
       ]
    },
    "workbench.startupEditor": "none",
    "explorer.confirmDragAndDrop": false,
    "editor.codeActionsOnSave": {},
    "stylelint.config": {
        "enable": false,
    },
    "rubyLsp.enabledFeatures": {
        "codeActions": true,
        "diagnostics": true,
        "documentHighlights": true,
        "documentLink": true,
        "documentSymbols": true,
        "foldingRanges": true,
        "formatting": true,
        "hover": true,
        "inlayHint": true,
        "onTypeFormatting": true,
        "selectionRanges": true,
        "semanticHighlighting": true,
        "completion": true,
        "codeLens": false,
        "definition": true
    },
    "gitlens.views.commits.pullRequests.enabled": false,
    "gitlens.views.pageItemLimit": 10,
    "apc.stylesheet": {
        "div.quick-input-widget": "top: 40px !important; width: calc(100% - 60px) !important; margin-left: 0 !important; left: 5px !important"
    },
}
